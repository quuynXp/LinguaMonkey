{
  "cli": {
    "version": ">= 16.24.1",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "android": {
        "image": "latest",
        "ndk": "27.1.12297006"
      },
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "API_URL": "http://10.0.2.2:8080/api/v1"
      }
    },
    "preview": {
      "android": {
        "image": "latest",
        "ndk": "27.1.12297006"
      },
      "distribution": "internal",
      "env": {
        "API_URL": "http://192.168.65.1:8080/api/v1"
      }
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "apk"
      },
      "env": {
        "API_URL": "https://api.yourdomain.com/api/v1"
      }
    }
  },
  "submit": {
    "production": {}
  }
}