{
  "cli": {
    "version": ">= 16.24.1",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "apk"
      }
    },
    "env": {
      "EXPO_PUBLIC_API_URL": "https://api.yourdomain.com",
      "NODE_ENV": "production"
    }
  },
  "submit": {
    "production": {}
  }
}